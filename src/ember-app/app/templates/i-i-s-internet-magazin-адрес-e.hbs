<h3 class="ui header">{{t "forms.i-i-s-internet-magazin-адрес-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.улица
      class=(if (v-get validationModel "улица" "isInvalid") "error")
      label=(t "forms.i-i-s-internet-magazin-адрес-e.улица-caption")
      data-test-i-i-s-internet-magazin-адрес-e-улица=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "улица" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.город
      class=(if (v-get validationModel "город" "isInvalid") "error")
      label=(t "forms.i-i-s-internet-magazin-адрес-e.город-caption")
      data-test-i-i-s-internet-magazin-адрес-e-город=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "город" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодАдреса
      class=(if (v-get validationModel "кодАдреса" "isInvalid") "error")
      label=(t "forms.i-i-s-internet-magazin-адрес-e.кодАдреса-caption")
      data-test-i-i-s-internet-magazin-адрес-e-кодАдреса=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодАдреса" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодКлиента
      class=(if (v-get validationModel "кодКлиента" "isInvalid") "error")
      label=(t "forms.i-i-s-internet-magazin-адрес-e.кодКлиента-caption")
      data-test-i-i-s-internet-magazin-адрес-e-кодКлиента=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодКлиента" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.индекс
      class=(if (v-get validationModel "индекс" "isInvalid") "error")
      label=(t "forms.i-i-s-internet-magazin-адрес-e.индекс-caption")
      data-test-i-i-s-internet-magazin-адрес-e-индекс=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "индекс" "message")}}
  </div>
</form>
